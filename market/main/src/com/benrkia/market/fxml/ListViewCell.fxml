<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="container" prefHeight="150.0" prefWidth="150.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="productImage" fitHeight="130.0" fitWidth="150.0" pickOnBounds="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <image>
            <Image url="@../../../../../assets/product.jpg" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
      <AnchorPane layoutY="130.0" style="-fx-border-color: #2196F3; -fx-border-width: 0 0 2 0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="130.0">
         <children>
            <Label fx:id="productName" styleClass="productName" stylesheets="@../css/productList.css" text="Product name" wrapText="true" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="2.5">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <Label fx:id="productPrice" text="\$1200.00" textFill="RED" AnchorPane.bottomAnchor="2.5" AnchorPane.rightAnchor="5.0">
               <font>
                  <Font name="System Bold" size="10.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
